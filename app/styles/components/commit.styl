_getListHeight(a,b)
	{(a * b + 10) %}

.commit
	position absolute
	box-sizing border-box
	top 0
	left 0
	width 100%
	padding 1em
	margin-bottom 1.25em
	height 10em
	overflow hidden
	border-bottom-right-radius 0em
	/*box-shadow 2px 5px 5px rgba(#333, 0.3)*/
	background-color white
	font-size 1rem
	border 0.15em solid #111
	transition all 1s ease-out
	animation fadeIn 1s ease-in forwards
	animation-iteration-count 1
	
	&:last-child
		margin-bottom 30em
	
	for i in (0..100)
		&:nth-of-type({i})
			transform translateY(_getListHeight(i - 1, 110))
			

	&:nth-of-type(2)
		background-color $color1
	&:nth-of-type(3)
		background-color lighten($color1, 20%)
	&:nth-of-type(4)
		background-color lighten($color1, 40%)
	&:nth-of-type(5)
		background-color lighten($color1, 60%)
	&:nth-of-type(6)
		background-color lighten($color1, 80%)

	> strong
		display block
		float left
		width 100%
		margin-top 0.5em
		color darken($color1, 90%)
		font-style italic
		font-family 'Open Sans'
		font-weight normal
	> span
		z-index 1
		position absolute
		bottom 0.5em
		right 0.5em
		font-family 'Open Sans'
		font-size 0.8em
	&:after
		z-index 0
		content ''
		position absolute
		display block
		bottom 0
		left 0
		width 100%
		height 2.5em



@keyframes fadeIn
	from
		opacity 0
	to 
		opacity 1