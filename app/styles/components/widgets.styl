.widgets
	position fixed
	width 100%
	bottom 5.4em
	left 0
	

.widget
	col(4/10)
	min-height 4em
	padding 0.25em 1em
	margin-left -7.5%
	box-sizing padding-box
	background-color rgba(darken(complement($color1), 50), 0.95)
	padding-left 10%
	color white
	transition margin-left 0.7s cubic-bezier(0.680, -0.550, 0.265, 1.550);
	h2
		font-family 'Open Sans'
		text-transform uppercase
	&--hidden
		margin-left -60%
	&--topCommitters
		&__entry
			position relative
			float left
			display inline-block
			width 50%
			padding-left 3.5em
			box-sizing border-box
			min-height 6em
			> label
				position absolute
				top 0
				left 0
				font-size 2.5em
				&:before
					content '#'
			> span
				display block
				float left
				width 70%
				line-height 0.6em
				padding-left 1em
				